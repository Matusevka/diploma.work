{% extends 'admin/base.html.twig' %}

{% block title %}Админка: Отпуск{% endblock %}

{% block container %}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div class="col-lg-12">
            <h4 class="h4">Отпуска</h4>
        </div>
        <div class="col-lg-12">
            <div class="form_group">
                <div class="col-md-8 col-md-offset-4">
                    <a href="/admin/add-vacation">
                        <i class="fa fa-btn fa-user"></i> Добавить
                    </a>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Идентификатор</th>
                        <th scope="col">Дата начала</th>
                        <th scope="col">Количество дней</th>
                        <th scope="col">Статус</th>
                        <th scope="col">Пользователь</th>
                        <th scope="col">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    {% for val in vacations %}
                    <tr>
                        <th scope="row">{{ val.id|e }}</th>
                        <td>{{ val.dateStart.format('Y-m-d')|e }}</td>
                        <td>{{ val.dayCount|e }}</td>
                        <td>{{ val.status.name|e }}</td>
                        <td>{{ val.user.name|e }}</td>
                        <td>
                            <a href="/admin/edit-vacation/{{ val.id|e }}">
                                <i class="fa fa-btn fa-user"></i> Редактирование
                            </a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}
{% extends 'admin/base.html.twig' %}

{% block title %}Админка: Учет времени{% endblock %}

{% block container %}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <div class="col-lg-12">
            <h4 class="h4">Учет времени</h4>
        </div>
        <div class="col-lg-12">
            <div class="form_group">
                <div class="col-md-8 col-md-offset-4">
                    <button id="btn-load-time-tracking" class="btn btn-success">
                        <i class="fa fa-btn fa-user"></i> Загрузить данные из Tick
                    </button>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Идентификатор</th>
                        <th scope="col">Дата</th>
                        <th scope="col">Количество часов</th>
                        <th scope="col">Описание</th>
                        <th scope="col">Задача</th>
                        <th scope="col">Ссылка на задачу</th>
                        <th scope="col">Дата обновления</th>
                        <th scope="col">Дата создания</th>
                        <th scope="col">Идентификатор пользователя</th>
                    </tr>
                </thead>
                <tbody>
                    {% for val in timetrackings %}
                    <tr>
                        <th scope="row">{{ val.id|e }}</th>
                        <td>{{ val.date|e }}</td>
                        <td>{{ val.hours|e }}</td>
                        <td>{{ val.notes|e }}</td>
                        <td>{{ val.task|e }}</td>
                        <td>{{ val.url|e }}</td>                        
                        <td>{{ (val.createdAt) ? val.createdAt.format('Y-m-d H:i') : ''|e }}</td>
                        <td>{{ val.updatedAt.format('Y-m-d H:i')|e }}</td>
                        <td>{{ val.getUserId|e }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}